# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...

# E2B Sandboxes
E2B_API_KEY=e2b_...

# Optional: custom E2B template IDs (faster boot, pre-installed packages)
# Build these with the Dockerfiles in e2b/ directory
# E2B_SPINEL_TEMPLATE=your-template-id
# E2B_VANILLA_TEMPLATE=your-template-id

# Materials Project (used inside Spinel sandbox)
MP_API_KEY=your-mp-api-key

# PostgreSQL (Railway, Neon, Supabase, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/spinel_arena

# S3-compatible file storage (optional â€” uploads are skipped if not configured)
S3_BUCKET=spinel-arena-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://fly.storage.tigris.dev  # Optional, for non-AWS S3
